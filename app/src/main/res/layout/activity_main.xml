<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- App Content -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.NestedScrollView>

    <!-- App Header -->
    <android.support.design.widget.AppBarLayout
        android:layout_height="240dp"
        android:layout_width="match_parent"
        android:id="@+id/main_appbar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/KingsAndQueen.TextAppearance.AppCompat.Medium.Blue.Light"
            app:collapsedTitleTextAppearance="@style/KingsAndQueen.TextAppearance.AppCompat.Medium"
            app:expandedTitleMargin="15dp"
            android:id="@+id/main_collapsable_header"
            app:contentScrim="@color/md_pink_50"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/main_content_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|enterAlways"
                >
            </android.support.v7.widget.Toolbar>
            <ImageView
                android:id="@+id/main_content_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:id="@+id/main_collapsing_tablayout"
            >
            <android.support.design.widget.TabLayout
                android:id="@+id/main_tablayout"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:background="@color/md_pink_50"
                app:tabSelectedTextColor="@color/md_pink_500"
                app:tabTextAppearance="@style/KingsAndQueen.TextAppearance.AppCompat.Pink.Light"
                >
                <android.support.design.widget.TabItem
                    android:id="@+id/main_tablayout_playdates"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/playdates_title"
                    />
                <android.support.design.widget.TabItem
                    android:id="@+id/main_tablayout_promotions"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/promotions_title"
                    />
            </android.support.design.widget.TabLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>